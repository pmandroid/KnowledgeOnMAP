<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/llMainLayout"
    android:background="@drawable/progress_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dip_16x">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_drawable_white" />

    <com.vfig.konm.knowledgeonmap.utils.custom_views.CustomTextView
        android:id="@+id/id_tv_loadingmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dip_8x"
        android:text="Loading"
        android:textColor="@color/white"
        android:textSize="@dimen/dip_16x" />


</LinearLayout>